[user]
	name = Taylor Briggs
	email = taylor.briggs@cobalt.io

[core]
  editor = nvim
  excludesfile = ~/.gitignore
  quotepath = false
  pager = delta

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  light = false

[color]
  ui = true
  pager = true
  branch = auto
  diff = auto
  interactive = auto

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
  tool = nvimdiff

[alias]
  aa = add -A
  co = checkout
  cob = checkout -b
  ci = commit -v
  br = branch
  df = diff
  dfs = diff --staged
  dfd = diff --diff-filter=D
  dfm = diff --diff-filter=M
  dfx = diff --diff-filter=X
  f = fetch
  lg = log -p
  lof = log --
  lol = log --graph --decorate --abbrev-commit
  lola = log --graph --decorate --abbrev-commit --all
  ls = ls-files
  pho = push origin
  plo = pull origin
  rb = rebase
  rbi = rebase -i
  rpo = remote prune origin
  st = status
  w = whatchanged

[format]
  pretty = oneline

[github]
  user = TaylorBriggs

[push]
  default = current

[commit]
	gpgsign = true

[tag]
  gpgsign = true

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
